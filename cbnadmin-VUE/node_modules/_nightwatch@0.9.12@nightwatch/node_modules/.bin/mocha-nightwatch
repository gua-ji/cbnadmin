#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../_mocha-nightwatch@2.2.9@mocha-nightwatch/bin/mocha" "$@"
  ret=$?
else 
  node  "$basedir/../../../_mocha-nightwatch@2.2.9@mocha-nightwatch/bin/mocha" "$@"
  ret=$?
fi
exit $ret
